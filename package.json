{
  "name": "doto-bot",
  "version": "1.0.0",
  "description": "A GitHub Action bot that scans repositories for TODO annotations, creates/manages issues, and raises PRs to remove completed TODOs.",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --target=node20 --outfile=dist/index.js --format=cjs",
    "lint": "eslint src/",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "github-action",
    "todo",
    "bot",
    "automation"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^3.0.0",
    "@actions/github": "^9.0.0"
  },
  "devDependencies": {
    "@swc/core": "^1.15.13",
    "@swc/jest": "^0.2.39",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.3.0",
    "esbuild": "^0.27.3",
    "jest": "^30.2.0",
    "typescript": "^5.3.3"
  }
}
